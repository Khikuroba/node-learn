extend ../layout/common  

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/users/create", method="post")
        .form-group
        label(for='name') Name
        input#name.form-control(name='name', type="text", value=values ? values.name : '')

        .form-group
        label(for='phone') Phone
        input#name.form-control(name='phone', type="text", value=values ? values.phone : '') 

        button.mt-2(class="btn btn-primary") Create