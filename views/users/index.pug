extend ../layout/common  

block content
    h1 
        span.mr-3 Users
        a.btn.btn-primary.mb-2(href="/users/create") New
    .d-flex.alighn-items-center
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text", class="form-control", name="q")
            button(class="btn btn-primary ml-2") Search
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) view
